---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Software Developer" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/jpeg" href="/sherif.jpeg" />
    <meta property="og:title" content="Sherif Ahmed" />
    <meta property="og:description" content="Software Developer" />
    <meta property="og:image" content="/sherif.jpeg" />
    <meta property="og:url" content="https://sherif Ahmed.vercel.app" />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Sherif Portfolio" />
    
    <!-- Twitter Card meta tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Sherif Ahmed" />
    <meta name="twitter:description" content="Software Developer" />
    <meta name="twitter:image" content="/photo.png" />
    
    <!-- Additional branding meta tags -->
    <meta name="author" content="Sherif Ahmed" />
    <meta name="keywords" content="software developer, web development, portfolio, sherif" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      rel="preload"
      as="style"
      href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap"
    />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap"
      media="print"
      onload="this.media='all'"
    />
    <noscript>
      <link
        rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap"
      />
    </noscript>

    <title>Sherif Ahmed</title>
  </head>
  <body class="bg-[--background] md:px-48 lg:px-20 px-9 transition-colors duration-300">
    <div id="global-circles-bg" class="fixed inset-0 pointer-events-none -z-10"></div>
    <slot />
    <script is:inline>
    (function() {
      const container = document.getElementById('global-circles-bg');
      if (!container) return;
      container.innerHTML = '';
      const circleCount = 7;
      const colors = [
        'rgba(164, 118, 255, 0.33)',
        'rgba(110, 231, 183, 0.33)',
        'rgba(124, 58, 237, 0.22)',
        'rgba(255,255,255,0.13)'
      ];
      for (let i = 0; i < circleCount; i++) {
        const div = document.createElement('div');
        const size = 80 + Math.random() * 180;
        const left = Math.random() * 80;
        const top = Math.random() * 80;
        const color = colors[Math.floor(Math.random() * colors.length)];
        div.style.position = 'absolute';
        div.style.width = `${size}px`;
        div.style.height = `${size}px`;
        div.style.left = `${left}%`;
        div.style.top = `${top}%`;
        div.style.transform = 'translate(-50%, -50%)';
        div.style.borderRadius = '50%';
        div.style.background = `radial-gradient(circle, ${color} 0%, transparent 80%)`;
        div.style.filter = 'blur(32px)';
        div.style.opacity = '0.16';
        div.style.pointerEvents = 'none';
        container.appendChild(div);
      }
    })();
    </script>
  </body>
</html>

<style is:global>
  :root {
    --background: #101010;
    --sec: #a476ff;
    --white: #dfdfdf;
    --white-icon: #f3f3f398;
    --white-icon-tr: #f3f3f310;
  }
  body {
    transition: background 0.3s, color 0.3s;
  }
  * {
    font-family:
      "montserrat",
      -apple-system,
      system-ui,
      sans-serif;
    box-sizing: border-box;
    padding: 0;
    margin: 0;
  }
  *::selection {
    background-color: var(--sec);
    color: var(--background);
  }
  ::-webkit-scrollbar {
    width: 15px;
  }
  ::-webkit-scrollbar-track {
    background: var(--container);
    border-radius: 30px;
  }
  ::-webkit-scrollbar-thumb {
    background: var(--background);
    border-radius: 10px;
  }
  ::-webkit-scrollbar-thumb:hover {
    background: var(--pink);
  }
  * {
    scrollbar-width: thin;
    scrollbar-color: var(--line) var(--container);
  }
  .global-circles-bg {
    position: fixed;
    inset: 0;
    pointer-events: none;
    z-index: -10;
  }
  .global-circles-bg .circle-glow {
    position: absolute;
    border-radius: 50%;
    filter: blur(32px);
    opacity: 0.16;
    pointer-events: none;
  }
  .global-circles-bg .circle1 {
    width: 220px; height: 220px;
    left: 8%; top: 12%;
    background: radial-gradient(circle, #a476ff55 0%, transparent 80%);
  }
  .global-circles-bg .circle2 {
    width: 180px; height: 180px;
    right: 10%; top: 30%;
    background: radial-gradient(circle, #6ee7b755 0%, transparent 80%);
  }
  .global-circles-bg .circle3 {
    width: 140px; height: 140px;
    left: 20%; bottom: 18%;
    background: radial-gradient(circle, #fff2 0%, transparent 80%);
  }
  .global-circles-bg .circle4 {
    width: 100px; height: 100px;
    right: 18%; bottom: 10%;
    background: radial-gradient(circle, #7c3aed44 0%, transparent 80%);
  }
</style>
